{
  "name": "tokencraft",
  "publisher": "TokenCraft",
  "displayName": "TokenCraft",
  "description": "A tool for designers and developers to simplify their use of design tokens",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tokenCraft",
          "title": "TokenCraft",
          "icon": "media/TokenCraft.svg"
        }
      ]
    },
    "views": {
      "tokenCraft": [
        {
          "type": "webview",
          "id": "tokenCraft.aiAssist",
          "name": "AI Assist"
        },
        {
          "type": "webview",
          "id": "tokenCraft.tokenQuery",
          "name": "Token Query"
        },
        {
          "type": "webview",
          "id": "tokenCraft.preview",
          "name": "Preview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "sass": "^1.77.8",
    "typescript": "^5.4.5"
  },
  "files": [
    "out",
    "src/html/aiAssist.html",
    "src/html/tokenQuery.html",
    "src/html/preview.html",
    "media/main.css"
  ],
  "dependencies": {
    "primeicons": "^7.0.0",
    "primeng": "^17.18.5"
  }
}
